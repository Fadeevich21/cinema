<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/color_theme_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/color_theme_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/color_theme_header">

        <RadioButton
            android:id="@+id/color_theme_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System theme" />

        <RadioButton
            android:id="@+id/color_theme_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light theme" />

        <RadioButton
            android:id="@+id/color_theme_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark theme" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>